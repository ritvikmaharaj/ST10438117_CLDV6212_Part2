@model DesignerCloset.Models.Customer

<div class="container mt-5 mb-5 p-4 shadow-lg rounded elegant-form">

    <h2 class="form-title mb-4 text-center">
        Add a New Customer
    </h2>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="CustomerName" class="form-label">First Name</label>
            <input asp-for="CustomerName" class="form-control form-control-custom" placeholder="Enter first name" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="CustomerSurname" class="form-label">Surname</label>
            <input asp-for="CustomerSurname" class="form-control form-control-custom" placeholder="Enter surname" />
        </div>

        <div class="form-group mb-4">
            <label asp-for="CustomerCell" class="form-label">Mobile Number</label>
            <input asp-for="CustomerCell" class="form-control form-control-custom" placeholder="e.g. 071 123 4567" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-outline-light px-4 py-2 elegant-btn">Save Customer</button>
        </div>
    </form>

</div>

<style>
    body {
        background-color: #000; 
        color: #fff;
        font-family: 'Georgia', serif;
    }

    .elegant-form {
        background-color: #1a1a1a;
        border: 1px solid #444;
        max-width: 600px;
    }

    .form-title {
        color: #bfa37c;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .form-control-custom {
        background-color: #2a2a2a;
        border: 1px solid #555;
        color: #fff;
    }

        .form-control-custom::placeholder {
            color: #aaa;
        }

    .form-label {
        color: #ccc;
        font-weight: 500;
    }

    .elegant-btn {
        border: 1px solid #bfa37c;
        color: #bfa37c;
        background-color: transparent;
        transition: 0.3s ease;
    }

        .elegant-btn:hover {
            background-color: #bfa37c;
            color: #000;
        }
</style>
