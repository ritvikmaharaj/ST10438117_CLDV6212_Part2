 @model DesignerCloset.Models.SneakerImage

@{
    ViewData["Title"] = "Add Sneaker Order with Image";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="text-center w-100">
        <h1 class="display-4 elegant-heading">Add Sneaker Order</h1>
        <p class="elegant-subtext">Add a new sneaker order with image.</p>
    </div>
</div>

<form asp-action="Index" asp-controller="Blob" method="post" enctype="multipart/form-data" class="mt-4">
    <div class="form-group mb-3">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Total" class="form-label"></label>
        <input asp-for="Total" class="form-control" type="number" step="0.01" min="0.01" />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="SneakerPicture" class="form-label"></label>
        <input asp-for="SneakerPicture" class="form-control" type="file" />
        <span asp-validation-for="SneakerPicture" class="text-danger"></span>
    </div>

    <button type="submit" class="btn elegant-btn">Submit Order</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Georgia', serif;
    }

    .elegant-heading {
        color: #bfa37c;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .elegant-subtext {
        color: #ccc;
        font-size: 1.1em;
    }

    .form-label {
        color: #bfa37c;
        font-weight: 600;
    }

    .form-control {
        background-color: #1e1e1e;
        color: #fff;
        border: 1px solid #444;
    }

        .form-control:focus {
            border-color: #bfa37c;
            box-shadow: 0 0 5px #bfa37c;
            background-color: #222;
            color: #fff;
        }

    .text-danger {
        color: #f44336;
    }

    .elegant-btn {
        border: 1px solid #bfa37c;
        color: #bfa37c;
        background-color: transparent;
        transition: 0.3s ease;
    }

        .elegant-btn:hover {
            background-color: #bfa37c;
            color: #000;
        }
</style>
 