@model IEnumerable<DesignerCloset.Models.OrderFunction>


@{
    ViewData["Title"] = "Order";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="text-center w-100">
        <h1 class="display-4 elegant-heading">Orders in System</h1>
        <p class="elegant-subtext">Below is the list of placed orders.</p>
    </div>
    <div>
        <a asp-controller="OrderFunction" asp-action="Index" class="btn btn-outline-light elegant-btn">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
else if (Model != null && Model.Any())
{
    <table class="table table-dark table-striped table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Total (USD)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.OrderByDescending(o => o.Timestamp))
            {
                <tr>
                    <td>@order.CustomerName</td>
                    <td>@order.ProductName</td>
                    <td>@order.Total.ToString()</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center mt-4">No orders found in the system.</p>
}

<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Georgia', serif;
    }

    .elegant-heading {
        color: #bfa37c;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .elegant-subtext {
        color: #ccc;
        font-size: 1.1em;
    }

    .table th {
        color: #bfa37c;
        border-bottom: 1px solid #444;
    }

    .table td {
        vertical-align: middle;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #1e1e1e;
    }

    .table-hover tbody tr:hover {
        background-color: #333;
    }

    .elegant-btn {
        border: 1px solid #bfa37c;
        color: #bfa37c;
        background-color: transparent;
        transition: 0.3s ease;
    }

        .elegant-btn:hover {
            background-color: #bfa37c;
            color: #000;
        }
</style>

